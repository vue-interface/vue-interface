{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "watch": "npm run build && lerna watch -- lerna run build --scope=$LERNA_PACKAGE_NAME --concurrency 1 --verbose",
    "dev": "lerna run dev --concurrency 1 --verbose",
    "build": "lerna run build --parallel --verbose",
    "lint": "lerna run lint --verbose",
    "fix": "lerna run fix --verbose",
    "graph": "npx nx graph"
  },
  "devDependencies": {
    "lerna": "^6.4.1",
    "turbo": "^1.7.4"
  }
}
