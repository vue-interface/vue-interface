{
  "name": "@vue-interface/input-field",
  "version": "0.9.18",
  "description": "A Vue input field component.",
  "main": "./dist/InputField.umd.js",
  "scripts": {
    "watch": "npm run serve",
    "serve": "vue-cli-service build --target lib --name=InputField ./main.vue --watch",
    "build": "vue-cli-service build --target lib --name=InputField ./main.vue",
    "lint": "vue-cli-service lint",
    "fix": "vue-cli-service lint --fix",
    "pre-release": "npm run build; git add . -A; git commit -m 'pre-release commit'",
    "release-patch": "npm run pre-release && npm version patch -m \"%s\" && npm run release;",
    "release-minor": "npm run pre-release && npm version minor -m \"%s\" && npm run release;",
    "release-major": "npm run pre-release && npm version major -m \"%s\" && npm run release;",
    "release": "git add . -A; git commit; git push --tags origin; npm publish;",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docs:dev": "./node_modules/.bin/vuepress dev docs",
    "docs:build": "./node_modules/.bin/vuepress build docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vue-interface/input-field.git"
  },
  "keywords": [
    "Input",
    "Field",
    "Vue",
    "Component",
    "Tailwind",
    "Bootstrap"
  ],
  "author": "Justin Kimbrell",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vue-interface/input-field/issues"
  },
  "homepage": "https://github.com/vue-interface/input-field/docs#readme",
  "dependencies": {
    "@vue-interface/activity-indicator": "^0.10.9",
    "@vue-interface/form-control": "^0.9.24",
    "core-js": "^3.6.0",
    "vue": "^2.6.12"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.7",
    "@vue/cli-plugin-eslint": "^4.5.7",
    "@vue/cli-service": "^4.5.7",
    "@vuepress/plugin-register-components": "^1.6.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.10.0",
    "eslint-plugin-vue": "^7.0.1",
    "markdown-it-meta": "0.0.1",
    "postcss-cli": "^8.1.0",
    "sass": "^1.27.0",
    "sass-loader": "^10.0.3",
    "tailwindcss": "^1.8.12",
    "vue-template-compiler": "^2.6.12",
    "vuepress": "^1.6.0",
    "vuepress-plugin-template-constants": "^0.2.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
